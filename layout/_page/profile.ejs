<div class="container">
    <div class="intro">
        <div class="avatar">
            <a href="<%- url_for(theme.nav.Posts) %>"><img src="<%- url_for(theme.avatar) %>"></a>
        </div>
        <div class="nickname"><%- theme.nickname %></div>
        <div class="description"><%- markdown(theme.description) %></div>
        <div class="links">
            <% if (theme.links !== undefined) { %>
                <% for (var key in theme.links){ %>

                    <%  
                        var desc;
                        var desc_0 = key.split("-")[0];
                        var desc_1 = key.split("-")[1];
                        if (desc_1 === undefined) {
                            desc = desc_0;
                        } else {
                            desc = desc_1;
                        }
                    %>
                    <a class="link-item" title="<%- desc %>" href="<%= theme.links[key] %>">
                        <% if(theme.links_text_enable) { %>
                            <%= desc %>
                        <%}%>
                        <%if(theme.links_icon_enable){ %>
                            <i class="iconfont icon-<%- desc_0.toLowerCase() %>"></i>
                        <%}%>
                    </a>
                <% } %>
            <% } %>
        </div>
    </div>
</div>
